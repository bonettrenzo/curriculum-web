---  
import GitHub from "./icons/GitHub.astro"
import JavaScript from "./icons/JavaScript.astro"
import React from "./icons/React.astro"
import Tailwind from "./icons/Tailwind.astro"
import Node from "./icons/Node.astro"
import ReactNative from "./icons/ReactNative.astro"
import PHP from "./icons/PHP.astro"
import Laravel from "./icons/Laravel.astro"
import CSharp from "./icons/CSharp.astro"
import Angular from "./icons/Angular.astro"
import PostgreSQL from "./icons/PostgreSQL.astro"
import HTML from "./icons/HTML.astro"
import CSS from "./icons/CSS.astro"
import SQLServer from "./icons/SQLServer.astro"
import AstroIcon from "./icons/Astro1.astro"
import ExpoIcon from "./icons/Expo.astro"
const TAGS = {
  GITHUB: { name: "GitHub", class: "bg-[#24292e] text-white", icon: GitHub },
  JAVASCRIPT: { name: "JavaScript", class: "bg-[#f7df1e] text-black", icon: JavaScript },
  REACT: { name: "React", class: "bg-[#61dafb] text-black", icon: React },
  TAILWIND: { name: "Tailwind CSS", class: "bg-[#06b6d4] text-white", icon: Tailwind },
  NODE: { name: "Node.js", class: "bg-[#339933] text-white", icon: Node },
  REACTNATIVE: { name: "React Native", class: "bg-[#61dafb] text-black", icon: ReactNative },
  EXPO: { name: "Expo", class: "bg-[#000000] text-white", icon: ExpoIcon },
  PHP: { name: "PHP", class: "bg-[#777bb4] text-white", icon: PHP },
  LARAVEL: { name: "Laravel", class: "bg-[#ff2d20] text-white", icon: Laravel },
  CSHARP: { name: "C#", class: "bg-[#239120] text-white", icon: CSharp },
  ANGULAR: { name: "Angular", class: "bg-[#dd0031] text-white", icon: Angular },
  POSTGRESQL: { name: "PostgreSQL", class: "bg-[#336791] text-white", icon: PostgreSQL },
  HTML: { name: "HTML", class: "bg-[#e34f26] text-white", icon: HTML },
  CSS: { name: "CSS", class: "bg-[#1572b6] text-white", icon: CSS },
  SQLSERVER: { name: "SQL Server", class: "bg-[#cc2927] text-white", icon: SQLServer },
  ASTRON: { name: "Astro", class: "bg-[#000000] text-white", icon: AstroIcon },
}

const CATEGORIES = {
  FRONTEND: "Frontend",
  BACKEND: "Backend",
  MOBILE: "Mobile",
  DATABASE: "Database",
  DEVOPS: "DevOps",
}

const TECH_CATEGORIES = {
  [CATEGORIES.FRONTEND]: [TAGS.JAVASCRIPT, TAGS.REACT, TAGS.ANGULAR, TAGS.HTML, TAGS.CSS, TAGS.TAILWIND, TAGS.ASTRON],
  [CATEGORIES.BACKEND]: [TAGS.NODE, TAGS.PHP, TAGS.LARAVEL, TAGS.CSHARP],
  [CATEGORIES.MOBILE]: [TAGS.REACTNATIVE, TAGS.EXPO],
  [CATEGORIES.DATABASE]: [TAGS.POSTGRESQL, TAGS.SQLSERVER],
  [CATEGORIES.DEVOPS]: [TAGS.GITHUB],
}
---

<section class="flex flex-col gap-8 mt-10">

  <h2 class="text-2xl font-bold mb-6 flex gap-x-3 items-center">
    <svg 
      xmlns="http://www.w3.org/2000/svg" 
      width="32" 
      height="32" 
      viewBox="0 0 24 24" 
      fill="none" 
      stroke="currentColor" 
      stroke-width="2" 
      stroke-linecap="round" 
      stroke-linejoin="round" 
      class="text-black-500 dark:text-white-400"
    >
      <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
    </svg>
    Tecnolog√≠as
  </h2>

  {Object.entries(TECH_CATEGORIES).map(([category, technologies]) => (
    <div class="mb-6">
      <h3 class="text-xl font-medium mb-2 text-gray-700 dark:text-gray-300">{category}</h3>
      <ul class="flex flex-wrap gap-2">
        {technologies.map((tag) => (
          <li>
            <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 items-center`}>
              {tag.icon && <tag.icon class="size-4" />}
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
    </div>
  ))}
</section>
